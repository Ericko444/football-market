{% extends 'base.html.twig' %}

{% block title %}Teams list
{% endblock %}

{% block body %}

	<section class="teams">
		<div class="teams__title">
			<h1>Teams ({{ pagination.getTotalItemCount }})</h1>
		</div>
		<a href="/team/create">Create teams</a>
		<div class="teams__gridcontent">
			<ul class="cards">
				{% for team in pagination %}
                    {%  include 'teams/team.html.twig' with {team} %}
                {% endfor %}
			</ul>
		</div>
	</section>

	<div class="navigation">
		{{ knp_pagination_render(pagination) }}
	</div>

{% endblock %}
